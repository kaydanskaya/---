#slideshow-inner {
    width: 100%;        /* приймає максимальну ширину слайд-шоу */
    height: 100%;       /* приймає максимальну висоту обгортання слайд-шоу */
   
    overflow: hidden;   /* це приховує інші зображення та робить видимим лише поточне зображення */
}

#slideshow-inner > ul {
    list-style: none;
    height: 100%;       /* ul — така ж висота, що й slideshow-inner */
    width: 1000%;        /* це гарантує, що ви можете бачити лише 1 зображення за раз */
    position: relative; /* це гарантує, що ви можете бачити лише 1 зображення за раз */
                            /* виправлено, щоб поточне зображення займало ширину повного екрана */
                            /* absolute зробить усі зображення видимими */
    left: 0px;
    transition: left 0.5s linear;               /* тут ми вказуємо, як швидко з'явиться наступне зображення */
        -webkit-transition: left 0.5s linear;
        -moz-transition: left 0.5s linear;
        -o-transition: left 0.5s linear;
}

#slideshow-inner > ul > li {
    width: 480px; 
                /* внутрішньої ширини слайд-шоу, щоб у нас було 1 зображення на слайд */
    height: 320px;  /* висота така ж, як і обгортка (це максимальна висота) */
    float: left;    
    position: relative;
}

#slideshow-inner > ul > li > img {
    height: 100%;   /* кожне зображення має максимальну висоту */
}

